<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /office_tracker/

    # Prevent direct access to application/system folders (optional safety)
    RewriteRule ^(system|application) - [F,L,NC]

    # Send requests that are not real files/directories to CodeIgniter
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php/$1 [L,QSA]
</IfModule>

DirectoryIndex index.php
